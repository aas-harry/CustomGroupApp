    $(document)
        .ready(function () {
            if (customGroupViewModel && customGroupViewModel.hasDataSource) {
                customGroupViewModel.showExistingCustomGroup(document.getElementById("custom-groups-list"));
                kendo.bind($("#custom-group-container"), customGroupViewModel);
            }
        });
</script>
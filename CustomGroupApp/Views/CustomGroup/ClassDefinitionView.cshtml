<div id="class-definition-container">
    <style scoped>
        #menu ul{
  list-style: none;
}

#menu li{
  display: inline;
}
    </style>
    <div>
        <span>Number of classes: </span>
        <input style="width: 80px; margin-right: 15px; margin-left: 10px; margin-bottom: 5px"
               data-role="numerictextbox"
               data-format="n0"
               data-min="1"
               data-max="30"
               data-bind="value: classCount, events: { change: onClassCountChange }">
        <span>(Max 30 Classes)</span>
    </div>
    <p>You can adjust the number of students in each classes below:</p>
    <div id="classes-settings-container" class="k-content wide">
        <div class="display: table"
             data-role="listview"
             data-bind="source: classes"
             data-template="classes-template">
        </div>
    </div>
    <div id="classes-setting-container2"  style="width: 400px" class="k-content wide">
</div>
        <script type="text/x-kendo-tmpl" id="classes-template">
            <div style="margin: 5px">
                <span>Class: #: classNo # </span>
                <input style="width: 80px; margin-right: 15px; margin-left: 10px; margin-bottom: 5px"
                       data-role="numerictextbox"
                       data-format="n0"
                       data-min="1"
                       data-max="30"
                       data-bind="value: studentCount">
            </div>
        </script>
    </div>

<script>

    var classDefinitionViewModel = new ClassDefinitionViewModel();

    $(document)
        .ready(function () {
            kendo.bind($("#class-definition-container"), classDefinitionViewModel);
        });
</script>
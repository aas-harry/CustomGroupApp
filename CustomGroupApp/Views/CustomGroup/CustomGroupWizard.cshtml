@model CustomGroupApp.Models.CustomGroupViewModel
<div>
    <style scoped>
        input[type="radio"] {
            margin-right: 5px;
            margin-bottom: 5px;
        }
          .k-grid td {
        padding-bottom: 2px;
        padding-top: 2px;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    </style>

    <div class="container-fluid" id="custom-group-container">
        <div class="row">
            <div id="custom-group-content" style="margin: 20px 20px 40px 20px">
                @Html.Partial("SelectGroupingType")
            </div>
        </div>
        <div class="row">
            <hr />
            <div id="navigation-buttons" style="margin-left: 20px">
                <button class="btn btn-default" data-bind="click: nextStep, disabled: isLastStep ">Next</button>
                <button class="btn btn-default" data-bind="click: previousStep, disabled: isFirstStep">Previous</button>
                <button class="btn btn-default" data-bind="click: cancelStep">Cancel</button>
            </div>
        </div>
    </div>
    <script>

        var customGroupViewModel = new CustomGroupViewModel(@Html.Raw(Json.Encode(Model.Results.Count())));

        $(document)
            .ready(function () {
                customGroupViewModel.setDatasource(test, studentResults, studentLanguages);
                kendo.bind($("#custom-group-container"), customGroupViewModel);
            });

        var studentResults =  @Html.Raw(Json.Encode(Model.Results.ToArray()));
        var test =  @Html.Raw(Json.Encode(Model.Test));
        var studentLanguages =  @Html.Raw(Json.Encode(Model.StudentLanguages.ToArray()));
    </script>
</div>